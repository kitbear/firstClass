<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <property name="now" value="now()" dbms="mysql"/>
    <changeSet id="2019101514205501" author="wangkai">
        <createTable tableName="fc_blog_content" remarks="博文表">
            <column name="id" type="bigint" autoIncrement="true"  remarks="id">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="blog_oid" type="varchar(36)" remarks="博文oid">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="bigint" remarks="用户id">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(200)" remarks="博文标题">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="text" remarks="博文内容">
                <constraints nullable="false"/>
            </column>
            <column name="viewers" type="bigint" remarks="浏览量" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="publish_date" type="timestamp" remarks="发表时间"/>
            <column name="created_date" type="timestamp" remarks="创建时间" defaultValue="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="fc_blog_content" indexName="idx_fc_blog_title" unique="false">
            <column name="title"/>
        </createIndex>

        <createIndex tableName="fc_blog_content" indexName="idx_fc_blog_oid" unique="true">
            <column name="blog_oid"/>
        </createIndex>

        <createIndex tableName="fc_blog_content" indexName="idx_fc_blog_user_id" unique="false">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
